<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <TextView
            android:id="@+id/tvBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rol: Operador"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDepartamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departamento: 101-A"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="24dp" />

        <!-- Estado de Barrera -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvEstadoBarrera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado Barrera: CERRADA"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Control de Barrera -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Control de Barrera"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAbrirBarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Abrir Barrera"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnCerrarBarrera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Cerrar Barrera"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Acceso -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceso R谩pido"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnAccesoApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Registrar Acceso desde App"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Gesti贸n (Solo Admin) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gesti贸n (Solo Administradores)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnGestionSensores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Gesti贸n de Sensores"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnGestionUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Gesti贸n de Usuarios"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Historial -->
        <Button
            android:id="@+id/btnHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Ver Historial de Accesos"
            android:backgroundTint="#607D8B"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Cerrar Sesi贸n -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Cerrar Sesi贸n"
            android:backgroundTint="#757575"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>