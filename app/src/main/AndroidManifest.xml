<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso de Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartAccessControl"
        android:usesCleartextTraffic="true"
        tools:targetApi="31"
        tools:replace="android:icon">

        <!-- Activity Principal: Login -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartAccessControl">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity: Registro -->
        <activity
            android:name=".ui.RegisterActivity"
            android:label="Registro"
            android:parentActivityName=".ui.LoginActivity" />

        <!-- Activity: Control de Acceso -->
        <activity
            android:name=".ui.AccessControlActivity"
            android:label="Panel de Control" />

        <!-- Activity: Historial de Accesos -->
        <activity
            android:name=".ui.AccessHistoryActivity"
            android:label="Historial de Accesos"
            android:parentActivityName=".ui.AccessControlActivity" />

